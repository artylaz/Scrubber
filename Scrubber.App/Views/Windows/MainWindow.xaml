<Window x:Class="Scrubber.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Scrubber.App.ViewModels.WindowsViewModel"
        xmlns:local="clr-namespace:Scrubber.App"
        xmlns:ico="http://schemas.fontawesome.com/icons/"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Height="450" Width="800" Icon="/Resources/Icon.png" 
        WindowState="Normal" AllowsTransparency="True" 
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen" 
        WindowStyle="None" MinWidth="1200" MinHeight="750">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Background>
        <ImageBrush ImageSource="/Resources/Background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseLeftButtonDown">
            <i:InvokeCommandAction
                Command="{Binding DragMoveCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid  Grid.Column="0" Opacity="0.9">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.6"/>
            </Grid.Background>

            <Grid Grid.Row="0" Height="100" Width="100" Opacity="0.8">
                <Grid.Background>
                    <SolidColorBrush Color="#FF365952" Opacity="0.9"/>
                </Grid.Background>

                <Image Source="/Resources/Icon.png"  Width="70" Height="70"/>
            </Grid>

            <StackPanel Margin="0,49.6,0.4,0"  VerticalAlignment="Top" Height="247" Grid.Row="1" Background="#FF162B1D">
                <Button Command="{Binding OpenTheoryPageCommand}" Height="50" Margin="0 10 0 0" Content="Теория" Style="{StaticResource ButtonMenu }" FontFamily="Times New Roman" FontSize="18"/>
                <Button Command="{Binding OpenСalculationPageCommand}" Height="50" Margin="0 10 0 0" Content="Расчёт" Style="{StaticResource ButtonMenu }" FontFamily="Times New Roman" FontSize="18"/>
                <Button Command="{Binding OpenResultsPageCommand}" Height="50" Margin="0 10 0 0" Content="Результаты" Style="{StaticResource ButtonMenu }" FontFamily="Times New Roman" FontSize="18"/>
                <Button Height="50" Margin="0 10 0 0" Content="Теория" Style="{StaticResource ButtonMenu }" FontFamily="Times New Roman" FontSize="18"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Height="50" VerticalAlignment="Bottom" Margin="0 0 0 20"  Orientation="Horizontal" >

                <Button Margin="30 0" Height="29" Width="30" 
                        Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Grid>
                        <Grid.Background>
                            <SolidColorBrush Color="#FF252526" Opacity="0"/>
                        </Grid.Background>
                        <ico:SvgAwesome Icon="Solid_Info" Foreground="#FF5BD483"/>
                    </Grid>
                </Button>

                <Button Command="{Binding CloseAppCommand}"  Height="30" Width="30" 
                        Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Grid>
                        <Grid.Background>
                            <SolidColorBrush Color="#FF252526" Opacity="0"/>
                        </Grid.Background>
                        <ico:SvgAwesome Icon="Solid_SignOutAlt" Foreground="#FF5BD483"/>
                    </Grid>
                </Button>
            </StackPanel>

        </Grid>

        <Frame 
            Grid.Column="1" 
            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
